[tool.poetry]
name = "{{ project_slug }}"
version = "0.1.0"
description = '{{ project_description }}'
authors = ["{% if author_email|trim %}{{ author_name }} <{{ author_email }}>{% else %}{{ author_name }}{% endif %}"]
readme = "README.md"
packages = [{include = "{{ project_slug }}", from = "src"}]

[tool.poetry.dependencies]
python = "^{{ python_version }}"
numpy = "^1.26.0"
pandas = "^2.1.0"
scikit-learn = "^1.3.0"
matplotlib = "^3.8.0"
seaborn = "^0.13.0"
python-dotenv = "^1.0.0"
pydantic = "^2.5.0"
hydra-core = "^1.3.0"
{% if use_jupyter %}
jupyter = "^1.0.0"
ipykernel = "^6.26.0"
{% endif %}
{% if ml_framework == "pytorch" %}
torch = "^2.1.0"
{% elif ml_framework == "tensorflow" %}
tensorflow = "^2.15.0"
{% endif %}

[tool.poetry.group.dev.dependencies]
pytest = "^7.4.0"
pytest-cov = "^4.1.0"
pre-commit = "^3.6.0"
ruff = "^0.1.9"
mypy = "^1.8.0"
black = "^23.12.0"
isort = "^5.13.0"
bandit = "^1.7.6"

[build-system]
requires = ["poetry-core"]
build-backend = "poetry.core.masonry.api"

# ===== RUFF Configuration =====
[tool.ruff]
target-version = "py{{ python_version | replace('.', '') }}"
line-length = 88
select = [
    "E",      # pycodestyle errors
    "W",      # pycodestyle warnings
    "F",      # Pyflakes
    "I",      # isort
    "B",      # flake8-bugbear
    "C4",     # flake8-comprehensions
    "UP",     # pyupgrade
    "ARG",    # flake8-unused-arguments
    "SIM",    # flake8-simplify
]
ignore = [
    "E501",   # line too long (handled by black)
    "B008",   # do not perform function calls in argument defaults
    "B905",   # `zip()` without an explicit `strict=` parameter
]
# Исключаем папки
exclude = [
    ".venv",
    "venv",
    "env",
    ".env",
    "__pycache__",
    ".git",
    ".mypy_cache",
    ".ruff_cache",
    "build",
    "dist",
    "*.egg-info",
]


[tool.ruff.per-file-ignores]
"__init__.py" = ["F401"]
"tests/*" = ["ARG"]

# ===== BLACK Configuration =====
[tool.black]
line-length = 88
target-version = ["py{{ python_version | replace('.', '') }}"]
include = '\.pyi?$'
extend-exclude = '''
/(
    \.venv
    | venv
    | env
    | \.env
    | build
    | dist
)/
'''

# ===== MYPY Configuration =====
[tool.mypy]
python_version = "{{ python_version }}"
warn_return_any = true
warn_unused_configs = true
ignore_missing_imports = true
exclude = [
    "^.venv/",
    "^venv/",
    "^env/",
    "^build/",
]

# ===== BANDIT Configuration =====
[tool.bandit]
exclude_dirs = ["tests", ".venv", "venv", "env"]
targets = ["src"]

# ===== PYTEST Configuration =====
[tool.pytest.ini_options]
testpaths = ["tests"]
python_files = "test_*.py"
addopts = "-v --cov={{ project_slug }} --cov-report=term-missing"
norecursedirs = [
    ".venv",
    "venv",
    "env",
    ".git",
    "__pycache__",
]